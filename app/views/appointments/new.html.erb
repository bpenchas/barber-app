<div class="col-md-6 col-md-offset-3">
<%= simple_form_for @appointment do |f| %>

  <%= f.input :slot, input_html: { class: 'form-control' }, :start_year => 2015, :label => 'Date'%>
  <%= f.input :time, input_html: { class: 'form-control' }, :minute_step => 30 %>
  <%= f.input :client_number, :label => "Number of Clients", input_html: { class: 'form-control' } %>
  <%= f.input :name, input_html: { class: 'form-control' } %>
  <%= f.input :address, input_html: { class: 'form-control' } %>
  <%= f.button :submit %>
<% end %>


<%=link_to 'Back', root_path%>
</div>