<%= simple_form_for @appointment do |f| %>
  <%= f.input :slot, input_html: { class: 'form-control' }, :start_year => 2015 %>
  <%= f.input :time, input_html: { class: 'form-control' }, :minute_step => 30 %>
  <%= f.input :client_number, input_html: { class: 'form-control' } %>
  <%= f.button :submit %>
<% end %>

<h1>List of taken time slots</h1>

<div align="center">
<% if @appointments.present?%>
	<%@appointments.each do |appt|%>

		<% if appt.slot > DateTime.now.to_date&&appt.slot<(DateTime.now.to_date + 10.days) %>
			<%=appt.slot%> <%=appt.time.strftime("%I: %M")%><br>
		<%end%>
	<%end%>
<%end%>
</div>

<%=link_to 'Back', root_path%>