<!DOCTYPE html>
<html>
<head>
  <title>Barberapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<p class="navbar-text pull-right">

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container"> <a class="btn btn-primary btn-dropnav" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a> 
      <div class="nav-collapse collapse">
        <ul class="nav pull-right">
        <% if user_signed_in? %>
          
          <li><%= link_to image_tag("http://png-1.findicons.com/files/icons/1580/devine_icons_part_2/128/home.png", size: "40x40"), appointments_path %></li>
                    <li><%= link_to image_tag("https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/512/scissors.png", size: "40x40"), new_appointment_path %></li>
                    <li><%= link_to image_tag("http://simpleicon.com/wp-content/uploads/account.png", size: "40x40"), edit_user_registration_path %></li>
                    <li><%= link_to image_tag("http://jaredmusil.com/code/wip/appdb/images/logout.png", size: "40x40"), destroy_user_session_path, method: :delete  %></li>
                     <li><%= link_to image_tag("https://cdn3.iconfinder.com/data/icons/rcons-finance/32/mobile_pay_card-512.png", size: "40x40"), payments_index_path, :class => 'navbar-link' %></li>
          
        <% else %>
          <li>
            <%= link_to "Sign Up", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "Sign In", new_user_session_path %>
          </li>
        </ul>
        <%end%>
        
      </div>
    </div>
  </div>
</div>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>
</body>
</html>
